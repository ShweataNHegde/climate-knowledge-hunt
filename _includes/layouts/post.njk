---
layout: layouts/base.njk
---

<div class="container">
  <h1>{{ title }}</h1>
  {{ content | safe }}

  <br><hr>
  {% if not hideTagsList %}
  <div class="card__tags">
    {% for tag in tags %}
      {% if tag != 'post' %}
        <a href="{{ '/tags/' | url }}{{ tag | slug }}">{{ tag }}</a>
        {%- if not loop.last %}{% endif %}
      {% endif %}
    {% endfor %}
        </div>
  {% endif %}
  <br><br>
  <a href="javascript:history.back()">&larr; Back</a>
</div>
